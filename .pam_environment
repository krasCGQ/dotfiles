#
# This file is parsed by pam_env module
#
# Syntax: simple "KEY=VAL" pairs on separate lines
#

# Compiler cache
USE_CCACHE=1
CCACHE_EXEC=/usr/bin/ccache
CCACHE_NOCOMPRESS=

# VA-API driver name
LIBVA_DRIVER_NAME=iHD

# Qt: Use Kvantum 
QT_STYLE_OVERRIDE=Kvantum

# LibreOffice: Force GTK3+KDE5 VCL UI to honor Plasma's scaling
SAL_USE_VCLPLUGIN=gtk3_kde5

# List of Vulkan ICDs to load; x86_64 > i686
# Don't export this systemwide as VK_ICD_FILENAMES; do it ourselves
VK_ICD_FILENAMES2=/usr/share/vulkan/icd.d/radeon_icd.x86_64.json:/usr/share/vulkan/icd.d/radeon_icd.i686.json:/usr/share/vulkan/icd.d/intel_icd.x86_64.json:/usr/share/vulkan/icd.d/intel_icd.i686.json

# Wine: Disable debug output by default
WINEDEBUG=-all

# Zstandard: default compression level override
ZSTD_CLEVEL=20

# We need a custom security policy for jack-server and Java 8 since JDK 8u292
# Don't export this by default to _JAVA_OPTIONS since it's a weakening measure
_JAVA_OPTIONS_JACK='-Djava.security.properties=/home/krascgq/.files/configs/jack-server.properties'
