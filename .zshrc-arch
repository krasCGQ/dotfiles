## All the mess done for display porn ##

# Allow expansion on prompts
setopt prompt_subst

# Load colors module
autoload -Uz colors
colors

# Init antibody
source <(antibody init)

# Load antibody plugins
for i in 'robbyrussell/oh-my-zsh path:plugins/gitfast' tylerreckart/hyperzsh; do
    antibody bundle $i
done

# Load Oh-My-Zsh lib required by prompt theme
source $(antibody home)/https-COLON--SLASH--SLASH-github.com-SLASH-robbyrussell-SLASH-oh-my-zsh/lib/git.zsh

# Get that Bash feeling back
source $(antibody home)/https-COLON--SLASH--SLASH-github.com-SLASH-robbyrussell-SLASH-oh-my-zsh/lib/key-bindings.zsh

# Redefinition
_return_status="%{$fg[red]%}%(?..⍉ )%{$reset_color%}"

# Update prompt to omit username + add whitespace at the end, and because bold looks cool
PROMPT='%{$fg_bold[white]%}$(_python_venv)%{$fg[cyan]%}%c $(git_prompt_info)%{$fg_bold[white]%}$(_git_time_since_commit)$(git_prompt_status)${_return_status}➜ %{$reset_color%} '

# Enable color output for some GNU programs
alias grep='grep --color=auto'
alias ls='ls --color=auto'

## Pretty much all my custom stuffs exported earlier

# For use with my environment setup only
BTGDIR=$HOME/KudProject/gcc
OPTDIR=/opt/kud
SWAP_FILE=$HOME/.swapfile
ZIPSIGNER=$HOME/.files/bin/zipsigner-3.0.jar

# Export every variables to satisfy shellcheck
export BTGDIR OPTDIR SWAP_FILE ZIPSIGNER

# Source my notebook (and common) environment setup
. "$HOME"/.files/scripts/env/notebook

# Additionally, source some snippets
for SNIPPET in pia tg_sendinline; do
    . "$HOME"/.files/scripts/snippets/$SNIPPET
done
